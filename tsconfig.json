{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 12+es2020",
  "files": [
    "src/CLIConfig.js",
    "src/CLIOptions.js",
    "src/ContractAPI.js",
    "src/ExtensionAPI.js",
    "src/plus.js",
    "src/util/CommandLineArgs.js",
    "src/util/SpawnNearCli.js",
    "src/util/color.js",
    "src/util/saveConfig.js"
  ],
  "compilerOptions": {
    "lib": [
      "es2020",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string"
    ],
    "module": "es2020",
    "target": "es2020",
    "outDir": "dist",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}